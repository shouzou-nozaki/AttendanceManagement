<Window x:Class="AttendanceApp.ScheduleSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="スケジュール設定" Height="213" Width="468">
    <Grid Margin="10">
        <StackPanel>
            <StackPanel>
                <TextBlock Text="勤務開始時間 (HH:mm)" Margin="0,0,0,5"/>
                <TextBox x:Name="txtStartTime" Width="200" Margin="0,0,0,10"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="勤務終了時間 (HH:mm)" Margin="0,0,0,5"/>
                <TextBox x:Name="txtEndTime" Width="200" Margin="0,0,0,10"/>
            </StackPanel>
            
            <StackPanel>
                <TextBlock Text="Excel出力先" Margin="0,0,0,5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="txtExcelPath" Width="300" Margin="50,0,10,0"/>
                <Button Content="参照" Width="80" Click="Browse_Click" Margin="0,0,10,0"/>
            </StackPanel>
            <Button Content="保存" Width="100" Click="SaveSchedule_Click" HorizontalAlignment="Center" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
