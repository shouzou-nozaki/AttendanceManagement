<Window x:Class="AttendanceApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="勤怠管理" Height="350" Width="525">
    <Grid Margin="10">
        <!-- 出勤・退勤ボタン -->
        <Button x:Name="btnStart" Content="出勤" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Click="btnStart_Click" />
        <Button x:Name="btnEnd" Content="退勤" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,50,0,0" Click="btnEnd_Click" />

        <!-- 出勤・退勤時間表示 -->
        <Label Content="出勤時間" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,0,0,0" />
        <TextBlock x:Name="lblStartTime" Text="-" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="250,0,0,0" />

        <Label Content="退勤時間" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,50,0,0" />
        <TextBlock x:Name="lblEndTime" Text="-" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="250,50,0,0" />

        <!-- 勤務時間表示 -->
        <Label Content="勤務時間" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,100,0,0" />
        <TextBlock x:Name="lblWorkHours" Text="-" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="250,100,0,0" />
    </Grid>
</Window>
