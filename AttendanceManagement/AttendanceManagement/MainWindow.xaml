<Window x:Class="AttendanceApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="勤怠管理" Height="350" Width="525">
    <Grid>
        <Button x:Name="btnStart" Content="出勤" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Click="btnStart_Click" Margin="10,10,0,0"/>
        <Button x:Name="btnEnd" Content="退勤" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Click="btnEnd_Click" Margin="10,60,0,0"/>
        <Label x:Name="lblStartTime" Content="出勤時間: " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,10,0,0"/>
        <Label x:Name="lblEndTime" Content="退勤時間: " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,60,0,0"/>
    </Grid>
</Window>
